{
  "manifest_version": 3,
  "name": "VU Education Lab AI Assistant for Teachers",
  "version": "3.2.0",
  "description": "An AI assistant for VU teachers to analyze web page content using a secure backend server with Google Gemini API.",
  "permissions": ["activeTab", "storage", "scripting", "identity"],
  "host_permissions": [
    "https://*.herokuapp.com/*"
  ],
  "oauth2": {
    "client_id": "696134929035-kl0md54jeopf5s3i0vjupktgt5umnplr.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/*",
        "popup.html",
        "popup.css",
        "popup.js",
        "api.js",
        "auth.js"
      ],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
